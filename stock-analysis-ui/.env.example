# ============================================================================
# CONFIGURATION ENVIRONMENT - STOCK ANALYSIS UI
# Copier ce fichier en .env et remplir les valeurs
# ============================================================================

# =========================
# FLASK / API
# =========================
FLASK_ENV=production
FLASK_APP=api.py
FLASK_SECRET_KEY=change-this-to-a-random-secret-key
DEBUG=False

# =========================
# DATABASE
# =========================
# SQLite (développement/petit déploiement)
DATABASE_URL=sqlite:///stock_analysis.db

# PostgreSQL (production scalable - décommenter si utilisé)
# DATABASE_URL=postgresql://user:password@localhost:5432/stock_analysis

# =========================
# API KEYS & CREDENTIALS
# =========================
# yfinance n'a pas besoin de clé (gratuit et public)
# Mais si vous utilisez d'autres services (Alpha Vantage, Polygon, etc):
# ALPHA_VANTAGE_KEY=your-api-key-here
# POLYGON_API_KEY=your-api-key-here

# =========================
# EMAIL / NOTIFICATIONS
# =========================
# Pour alertes via email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
NOTIFICATION_EMAIL=recipient@example.com

# =========================
# CACHE & PERFORMANCE
# =========================
CACHE_TTL_SECONDS=3600
SECTOR_CACHE_TTL_DAYS=30
MARKET_DATA_CACHE_TTL_DAYS=1

# =========================
# LOGGING
# =========================
LOG_LEVEL=INFO
LOG_FILE=logs/stock_analysis.log

# =========================
# PATHS
# =========================
DATA_DIR=data
CACHE_DIR=cache_data
SIGNALS_DIR=signaux
LOGS_DIR=logs

# =========================
# MARKET DATA
# =========================
# Fichiers de symboles
POPULAR_SYMBOLS_FILE=popular_symbols.txt
PERSONAL_SYMBOLS_FILE=mes_symbols.txt
SP500_SYMBOLS_FILE=sp500_symbols.txt

# =========================
# TRADING PARAMETERS
# =========================
# Paramètres du système de trading
MIN_RELIABILITY_THRESHOLD=30
BACKTEST_PERIOD=12mo
TRAINING_MONTHS=12

# =========================
# PRODUCTION SETTINGS
# =========================
WORKERS=4
THREADS_PER_WORKER=2
TIMEOUT=120
BIND_ADDRESS=0.0.0.0
BIND_PORT=5000
